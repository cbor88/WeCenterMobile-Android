<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" >

            <ImageView
                android:id="@+id/ivHomeListItemAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar_masker" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvHomeListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="包子"
            android:textColor="#E8783A" />

        <TextView
            android:id="@+id/tvHomeListItemState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:text="赞同该回答"
            android:textColor="#D3D3D3" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHomeListItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="请问漳州有哪些鲜为人知的美食 值得推荐呢？"
        android:textSize="19sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llsHomeListItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvHomeListItemAgreeCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FF7C47"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvHomeListItemBestAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="厦门本岛 中山路，集中了各种小吃的地方，一条街沿路各种小摊，尤其是天黑之后，各种小吃推车都出来了，一路走一路吃吧，能吃到各种."
            android:textColor="#86898A" />
    </LinearLayout>

</LinearLayout>